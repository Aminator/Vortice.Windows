<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_Vortice_Dxc_IsWindows Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">true</_Vortice_Dxc_IsWindows>
  </PropertyGroup>
  <ItemGroup>
    <Content Condition="'$(_Vortice_Dxc_IsWindows)' == 'true'" Include="$(MSBuildThisFileDirectory)..\..\binaries\win\**">
      <Link>binaries/win/%(RecursiveDir)%(Filename)%(Extension)</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <Visible>True</Visible>
    </Content>
  </ItemGroup>
</Project>
